<div>
  
  {% if block.settings.title != blank %}
  <h2>{{ block.settings.title }}</h2>
  {% endif %}

  <div>
    {% content_for 'blocks' %}
  </div>
</div>

{% schema %}
{
  "name": "Collapsible content",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [{"type": "_collapsible_item"}],
  "presets": [
    { 
      "name": "Collapsible content",
      "blocks": [
        {
          "type":"_collapsible_item",
          "settings": {
            "heading": "Heading...",
            "text": "<p>Text...<p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}