<button 
  type="button" 
  class="tab-nav-btn" 
  data-order="{{ block.settings.tab_order }}"
>
  {{ block.settings.tab_title }}
</button>

{% schema %}
{
  "name": "Tab button",
  "tag": null,
  "settings": [
    {
      "type": "number",
      "id": "tab_order",
      "label": "Number (same in content!)",
      "default": 0
    },
    {
      "type": "text",
      "id": "tab_title",
      "label": "Title",
      "default": "Tab"
    }
  ],
  "presets": [{
    "name": "Tab button"
  }]
}
{% endschema %}